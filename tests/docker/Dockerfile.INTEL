# Use Intel OneAPI HPC image
FROM intel/oneapi-hpckit:latest

# Install gfortran
RUN apt-get update && apt-get install -y gfortran libopenmpi-dev libfftw3-dev && rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /workspace

# Copy your code into the container
COPY . /workspace

# Source Intel environment and compile your Fortran code
CMD ["/bin/bash", "-c", "source /opt/intel/oneapi/setvars.sh && make libs FCOMP=INTEL && make FCOMP=INTEL"]
