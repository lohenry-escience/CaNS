# Use Intel OneAPI HPC image
FROM intel/oneapi-hpckit:latest

# Set the working directory
WORKDIR /workspace

# Copy your code into the container
COPY . /workspace

# Source Intel environment and compile your Fortran code
CMD ["/bin/bash", "-c", "source /opt/intel/oneapi/setvars.sh && mpiifort -o myprogram myprogram.f90"]
